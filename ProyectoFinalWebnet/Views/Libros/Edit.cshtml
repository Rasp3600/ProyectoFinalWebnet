@model ProyectoFinalWebnet.Models.LibroViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Libros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Libro.ID" />
            <div class="form-group">
                <label asp-for="Libro.Titulo" class="control-label"></label>
                <input asp-for="Libro.Titulo" class="form-control" />
                <span asp-validation-for="Libro.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Autor" class="control-label"></label>
                <input asp-for="Libro.Autor" class="form-control" />
                <span asp-validation-for="Libro.Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Genero" class="control-label"></label>
                <input asp-for="Libro.Genero" class="form-control" />
                <span asp-validation-for="Libro.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.ISBN" class="control-label"></label>
                <input asp-for="Libro.ISBN" class="form-control" />
                <span asp-validation-for="Libro.ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.FechaPublicacion" class="control-label"></label>
                <input asp-for="Libro.FechaPublicacion" class="form-control" />
                <span asp-validation-for="Libro.FechaPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Editorial" class="control-label"></label>
                <input asp-for="Libro.Editorial" class="form-control" />
                <span asp-validation-for="Libro.Editorial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Cantidad" class="control-label"></label>
                <input asp-for="Libro.Cantidad" class="form-control" />
                <span asp-validation-for="Libro.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.TotalCopias" class="control-label"></label>
                <input asp-for="Libro.TotalCopias" class="form-control" />
                <span asp-validation-for="Libro.TotalCopias" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="categoria" class="form-label">Categoría:</label>
                <select asp-for="SelectedCategoriaId" class="form-control" id="Libro_Id_categoria">
                    @foreach (var categoria in Model.Categorias)
                    {
                        <option value="@categoria.Value">@categoria.Text</option>
                    }
                </select>
                <span asp-validation-for="SelectedCategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
